CREATE DATABASE one;
USE one;
SHOW DATABASES;

CREATE DATABSE ( database_name ) : creates a database;

create table student(
std_name varchar(50),
usn varchar(11) NOT NUll,
address varchar(50),
roll_no int(2),
phone_number int (9),
gender CHAR,
PRIMARY KEY (usn));
 

 DESC student;  // to show ur table in a descriptive way


CREATE DATABASE one;
USE one;
SHOW DATABASES;

 create table student(
usn varchar(11) NOT NUll,
std_name varchar(50),
address varchar(50),
roll_no int(2),
phone_number VARCHAR (11),
gender CHAR,
PRIMARY KEY (usn));
DESC student;

CREATE TABLE exam(
s_id VARCHAR(10) not null,
sem int,
sec char,
primary key (s_id));

