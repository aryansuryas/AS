 CREATE DATABASE one;
USE one;
SHOW DATABASES;
use one;

 create table student(
 usn varchar(11) NOT NUll,std_name varchar(50),address varchar(50),roll_no int(2),gender CHAR,PRIMARY KEY (usn));
DESC student;



CREATE TABLE exam(
s_id VARCHAR(10) not null,sem int,sec char,primary key (s_id));
DESC exam; 


CREATE TABLE class(
usn varchar(11) not null,
s_id varchar(10),
PRIMARY KEY(usn),
FOREIGN key(usn)REFERENCES student(usn) ON DELETE CASCADE,
FOREIGN key(s_id)REFERENCES exam(s_id) ON DELETE CASCADE);

DESC class;


